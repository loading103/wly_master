<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="url"
        type="String" />
</data>
    <RelativeLayout
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_weather"
            app:url="@{url}"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_13"/>
        <TextView
            android:id="@+id/tv_weather"
            android:layout_toEndOf="@+id/img_weather"
            android:layout_marginTop="@dimen/dp_22"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            android:textColor="@color/color_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_12"
            android:visibility="gone"
            android:layout_below="@+id/tv_weather"
            android:textSize="@dimen/sp_15"
            android:drawableEnd="@mipmap/village_index_button_arrow_big_normal"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_summary"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="@color/color_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_banner"
            android:layout_below="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.daqsoft.provider.view.convenientbanner.ConvenientBanner
                android:id="@+id/cbr_country_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_168"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <RelativeLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_country_detail_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/country_alpha_black_radius"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_3"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:text="画册"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/txt_country_detail_pannaor"
                    />

                <TextView
                    android:id="@+id/txt_country_detail_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/country_alpha_black_radius"
                    android:drawablePadding="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="视频"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_country_detail_pannaor"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/country_alpha_black_radius"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:text="720"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_3"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@+id/txt_country_detail_video"
                    />
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.daqsoft.travelCultureModule.country.view.ExpandableTextView
            android:id="@+id/tv_introduce"
            android:paddingTop="@dimen/dp_12"
            app:collapseDrawable="@mipmap/main_arrow_down"
            app:contentTextSize="@dimen/sp_13"
            app:contentTextColor="@color/color_666"
            app:expandDrawable="@mipmap/main_arrow_up"
            app:maxCollapsedLines="4"
            android:layout_below="@+id/con_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>