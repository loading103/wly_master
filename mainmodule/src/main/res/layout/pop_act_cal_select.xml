<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_popwindow_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/v_pre_month"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_20">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_22"
                    android:scaleType="fitXY"
                    android:src="@mipmap/activity_list_button_month_previous" />
            </FrameLayout>

            <TextView
                android:id="@+id/txt_act_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16" />

            <FrameLayout
                android:id="@+id/v_next_month"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:scaleType="fitXY"
                    android:src="@mipmap/activity_list_button_month_next" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="二"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="三"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="四"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="五"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="六"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_act_select_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="@color/white" />
    </LinearLayout>
</layout>