<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@id/rl_root"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/rank_area_bg_mask"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_22"
        android:id="@+id/iv_logo"
        android:layout_marginRight="@dimen/dp_18">
        <com.daqsoft.baselib.widgets.LetterSpacingTextView
            android:id="@+id/tsv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/shape_white_105"
            app:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            app:textSpacing="15"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/item_1"
        android:layout_marginTop="@dimen/dp_190"
        layout="@layout/layout_my_redblack_list_type"
        android:layout_height="@dimen/dp_120"
        android:layout_width="match_parent"/>
</RelativeLayout>