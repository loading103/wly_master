<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="url"
            type="String" />

        <variable
            name="logo"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.daqsoft.baselib.widgets.ArcImageView
            android:id="@+id/img_travel_guide"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_width="match_parent"
            placeholder="@drawable/placeholder_img_fail_240_180"
            android:layout_height="@dimen/dp_164"
            android:scaleType="centerCrop"
            app:border_color="@color/white"
            app:corner_bottom_left_radius="@dimen/dp_5"
            app:corner_bottom_right_radius="@dimen/dp_5"
            app:corner_top_left_radius="@dimen/dp_5"
            app:corner_top_right_radius="@dimen/dp_5"
            app:is_circle="false" />
        <TextView
            android:id="@+id/travel_guide_title"
            android:layout_below="@+id/img_travel_guide"
            android:layout_marginTop="@dimen/dp_16"
            android:includeFontPadding="false"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:singleLine="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>