<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="url"
            type="String" />

        <variable
            name="name"
            type="String" />

        <variable
            name="info"
            type="String" />

        <variable
            name="placeholder"
            type="android.graphics.drawable.Drawable" />
    </data>

    <RelativeLayout
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_250"
        android:elevation="@dimen/dp_15"
        android:orientation="vertical"
        android:outlineProvider="bounds">

        <com.daqsoft.baselib.widgets.ArcImageView
            android:id="@+id/view_covers"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_250"
            android:src="@mipmap/placeholder_img_fail_240_180"
            app:corner_bottom_left_radius="@dimen/dp_10"
            app:corner_bottom_right_radius="@dimen/dp_10"
            app:corner_top_left_radius="@dimen/dp_10"
            app:corner_top_right_radius="@dimen/dp_10" />
    </RelativeLayout>
</layout>
