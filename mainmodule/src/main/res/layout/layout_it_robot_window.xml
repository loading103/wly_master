<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_90">

        <RelativeLayout
            android:id="@+id/v_robot_info"
            android:layout_width="0dip"
            android:layout_height="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/robot_pop_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_robot_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_68"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_toLeftOf="@+id/img_robot_go"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="3"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_11"
                tools:text="今天是10月6日，星期四，，天气16°晴转多云午饭了呦，该吃饭啦！点击我，带你去找好吃的" />

            <ImageView
                android:id="@+id/img_robot_go"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@mipmap/robot_pop_button_go" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_hide_robot"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/robot_pop_button_fold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>