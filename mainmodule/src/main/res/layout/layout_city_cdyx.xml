<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成都印象"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold"
            android:textColorHint="@color/txt_black"
            android:drawableRight="@mipmap/home_more"
            android:paddingTop="@dimen/dp_20"
/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_8"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >
            <LinearLayout
                android:id="@+id/happy_l_t"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@mipmap/city_card_mask_blue"
                android:orientation="vertical"
                app:layout_constraintHorizontal_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/tv_summery_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_12"
                    android:textColor="@color/white"
                    android:maxLength="10"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:lines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:background="@mipmap/city_card_mask_green"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toStartOf="@+id/ll_r_t"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/happy_l_t"
                app:layout_constraintStart_toEndOf="@+id/happy_l_t"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4">
                <TextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/sp_16"
                    android:maxLength="5"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/tv_summery_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/dp_12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:lines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_r_t"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:background="@mipmap/city_card_mask_emerald"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@id/ll_r_b_r"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tv_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/tv_summery_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/dp_12"
                    android:maxLength="8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:lines="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_l_l"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:background="@mipmap/city_card_mask_purple"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/happy_l_t"
                android:layout_marginTop="@dimen/dp_4">
                <TextView
                    android:id="@+id/tv_title_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:maxLength="12"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/tv_summery_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/dp_12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:lines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_r_b_r"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@mipmap/city_card_mask_yellow"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ll_l_l"
                app:layout_constraintTop_toBottomOf="@id/happy_l_t"
                android:layout_marginStart="@dimen/dp_4">
                <TextView
                    android:id="@+id/tv_title_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:lines="1"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/tv_summery_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:maxLength="8"
                    android:lines="1"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/ll_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_32"
            android:background="@drawable/home_b_f5_stroke_null_round_5"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/txt_black"
                android:text="换一批"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/city_card_refresh"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

    </LinearLayout>
</layout>
