<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_mdd_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_121"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_mdd_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天府旅游名县"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:background="@drawable/city_dqx_sign"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_mdd_play"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/city_card_gs_video"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_91"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_19">
            <TextView
                android:id="@+id/tv_mdd_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成都青羊区"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_11"/>
            <TextView
                android:id="@+id/tv_mdd_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorPrimary"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="@dimen/dp_8"/>
            <TextView
                android:id="@+id/tv_mdd_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/color_999"
                android:maxLines="2"
                android:layout_marginTop="@dimen/dp_12"/>
        </LinearLayout>
    </LinearLayout>
</layout>
