<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/tv_rule_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_19"
            android:textColor="@color/color_333"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:text="活动规则"
            android:layout_marginStart="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_28"
            />
        <TextView
            android:scrollbars="vertical"
            android:id="@+id/tv_rule_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_333"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_35"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_rule_title"
            android:layout_marginStart="@dimen/dp_20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>