<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="@string/activity_wonderful_moment"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />


            <com.daqsoft.baselib.widgets.CenterDrawableTextView
                android:id="@+id/ctv_wonderful_moment_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/common_button_arrow_more_small"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center"
                android:text="@string/user_more"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <com.daqsoft.provider.scrollview.DqRecylerView
            android:id="@+id/rv_activity_wonderful_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:minHeight="@dimen/dp_32" />

        <com.daqsoft.provider.scrollview.DqRecylerView
            android:id="@+id/rv_activity_wonderfuls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4" />
    </LinearLayout>
</layout>