<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <RelativeLayout
        android:id="@+id/rl_activity_overview"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <RelativeLayout
            android:id="@+id/rl_activity_overview_bg"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_70">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_activity_overview_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:includeFontPadding="false"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:textColor="@color/status_text"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="展览" />

                <TextView
                    android:id="@+id/tv_activity_overview_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_activity_overview_type_name"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/status_text"
                    android:textSize="@dimen/sp_12"
                    tools:text="120场" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>