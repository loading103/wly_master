<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_calender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:alpha="0.75"
                android:includeFontPadding="false"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_11"
                tools:text="06.10" />

            <TextView
                android:id="@+id/tv_calender_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_calender_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14"
                tools:text="今天" />

            <View
                android:id="@+id/v_calender_tip"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_below="@+id/tv_calender_week"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/shape_cirle_s4_white"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
