<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="scenic"
            type="com.daqsoft.provider.bean.ScenicBean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
        <ImageView
            android:id="@+id/iv_ib_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingBottom="10dp"
                android:layout_alignBottom="@+id/iv_ib_logo"
                android:gravity="bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_ib_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5A"
                    android:background="@drawable/main_shape_00_back_2_5_radius"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_ib_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/activity_details_video"
                    android:visibility="@{scenic.video.equals(``)?View.GONE:View.VISIBLE}"/>
                <ImageView
                    android:id="@+id/iv_ib_goldstory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/activity_details_commentary"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:visibility="@{scenic.goldStory.link.equals(``)?View.GONE:View.VISIBLE}"/>
                <ImageView
                    android:id="@+id/iv_ib_720"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/activity_details_720"
                   android:layout_marginLeft="@dimen/dp_7"
                    android:visibility="@{scenic.panoramaUrl.equals(``)?View.GONE:View.VISIBLE}"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ib_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_ib_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#80ffffff"
            android:layout_marginTop="@dimen/dp_8"/>
    </LinearLayout>
</layout>
