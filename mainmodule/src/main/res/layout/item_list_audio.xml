<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_list_audio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:background="@drawable/club_audio_cicle">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/community_audio"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_ila_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/community_play_small"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/tv_ila_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="@dimen/dp_16"
                android:text="自愿团队音频介绍"/>
            <SeekBar
                android:id="@+id/sb_ila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:thumb="@drawable/selector_thumb_bar"
                android:progressDrawable="@drawable/seekbar_shape"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progress="0"
                android:max="100"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_8">
                <TextView
                    android:id="@+id/tv_ila_curtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:02/"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_2ECD4D"/>
                <TextView
                    android:id="@+id/tv_ila_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:35/"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_999"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
