<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="com.daqsoft.provider.bean.ActivityBean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_marginRight="@dimen/dp_15">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ib_logo_city_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_119"
            android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingBottom="10dp"
                android:layout_alignBottom="@+id/iv_ib_logo_city_activity"
                android:gravity="bottom"
                android:visibility="@{activity.classifyName.equals(``)?View.GONE:View.VISIBLE}">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_ib_level_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{activity.classifyName}"
                    android:background="@drawable/main_shape_00_back_2_5_radius"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ib_name_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_333"
            android:text="@{activity.name}"
            android:maxLines="2"
            android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_city_activity_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:visibility="@{Float.parseFloat(activity.money)>0?View.GONE:View.VISIBLE}"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:visibility="@{Float.parseFloat(activity.money)>0?View.VISIBLE:View.GONE}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/ff9e05"
                        android:text="¥"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/ff9e05"
                        android:text="@{activity.money}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/ff9e05"
                        android:text="起"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</layout>
