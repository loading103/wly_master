<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_item_brand_city"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_268"
            android:layout_height="@dimen/dp_150"
            android:background="@color/color_alpha_00"
            android:paddingBottom="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_item_brand_background_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rl_item_brand_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/brand_sign"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_item_brand_name_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tv_item_brand_introduce_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_item_brand_other_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#80ffffff"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
