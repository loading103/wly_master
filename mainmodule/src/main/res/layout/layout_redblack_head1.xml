<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:id="@+id/fl_root"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_370">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/rank_area_bg_mask"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        android:background="#330c7b"
        android:layout_marginTop="@dimen/dp_370"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_18"
        android:id="@+id/iv_logo"
        android:background="@mipmap/rank_area_title">
        <com.daqsoft.baselib.widgets.LetterSpacingTextView
            android:id="@+id/tsv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/shape_white_105"
            app:text=""
            app:textSpacing="15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_184"
        android:layout_marginRight="@dimen/dp_13">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_276"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            android:background="@drawable/shape_white_10">

            <com.daqsoft.baselib.widgets.RoundAngleImageView
                android:id="@+id/iv_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:src="@mipmap/placeholder_img_fail_240_180"
                android:layout_height="@dimen/dp_156"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.daqsoft.baselib.widgets.RoundAngleImageView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_156"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:src="@mipmap/rank_area_list_img_mask"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:text="乌鲁木齐"
                android:layout_marginBottom="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_16"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                app:layout_constraintLeft_toLeftOf="@+id/iv_content"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/tv_area"
                app:layout_constraintLeft_toLeftOf="@+id/iv_content">
                <RatingBar
                    android:id="@+id/rating_bar_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="3"
                    android:theme="@style/RatingBarRed"/>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合评分：4.0"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_name" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_25"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/color_333"
                app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                app:layout_constraintRight_toRightOf="@+id/iv_content" />

            <LinearLayout
                android:id="@+id/ll_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="@+id/iv_content"
                app:layout_constraintRight_toLeftOf="@+id/ll_hotle"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:text="景区评价:  " />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sl_area"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_name"
                    android:background="@drawable/shape_gray_15">
                    <TextView
                        android:id="@+id/tv_area_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:text="5.0"
                        app:layout_constraintLeft_toLeftOf="@+id/sl_area"
                        app:layout_constraintTop_toTopOf="@+id/sl_area"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_area"
                        android:layout_marginLeft="@dimen/dp_16"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rank_icon_arrow"
                        app:layout_constraintRight_toRightOf="@+id/sl_area"
                        app:layout_constraintTop_toTopOf="@+id/sl_area"
                        android:layout_marginRight="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_area" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hotle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:gravity="start|center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/iv_content"
                app:layout_constraintLeft_toRightOf="@+id/ll_area"
                app:layout_constraintRight_toRightOf="@id/iv_content"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:text="酒店评价:     " />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sl_hotel"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_name"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:background="@drawable/shape_gray_15">
                    <TextView
                        android:id="@+id/tv_hotel_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:text="5.0"
                        app:layout_constraintLeft_toLeftOf="@+id/sl_hotel"
                        app:layout_constraintTop_toTopOf="@+id/sl_hotel"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_hotel"
                        android:layout_marginLeft="@dimen/dp_16"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rank_icon_arrow"
                        app:layout_constraintRight_toRightOf="@+id/sl_hotel"
                        app:layout_constraintTop_toTopOf="@+id/sl_hotel"
                        android:layout_marginRight="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_hotel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/ll_area"
                app:layout_constraintLeft_toLeftOf="@+id/iv_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:text="餐饮评价:  " />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sl_food"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_name"
                    android:background="@drawable/shape_gray_15">
                    <TextView
                        android:id="@+id/tv_food_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:text="5.0"
                        app:layout_constraintLeft_toLeftOf="@+id/sl_food"
                        app:layout_constraintTop_toTopOf="@+id/sl_food"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_food"
                        android:layout_marginLeft="@dimen/dp_16"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rank_icon_arrow"
                        app:layout_constraintRight_toRightOf="@+id/sl_food"
                        app:layout_constraintTop_toTopOf="@+id/sl_food"
                        android:layout_marginRight="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_food" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_njl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll_area"
                app:layout_constraintLeft_toRightOf="@+id/ll_area"
                app:layout_constraintRight_toRightOf="@id/iv_content"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:text="农家乐评价：" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sl_njl"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_content"
                    app:layout_constraintLeft_toRightOf="@+id/tv_name"
                    android:background="@drawable/shape_gray_15">
                    <TextView
                        android:id="@+id/tv_njl_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:text="5.0"
                        app:layout_constraintLeft_toLeftOf="@+id/sl_njl"
                        app:layout_constraintTop_toTopOf="@+id/sl_njl"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_njl"
                        android:layout_marginLeft="@dimen/dp_16"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rank_icon_arrow"
                        app:layout_constraintRight_toRightOf="@+id/sl_njl"
                        app:layout_constraintTop_toTopOf="@+id/sl_njl"
                        android:layout_marginRight="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/sl_njl" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rank_area_tag_1st"/>
    </FrameLayout>

</FrameLayout>