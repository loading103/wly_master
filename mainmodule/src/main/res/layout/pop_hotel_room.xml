<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_popwindow_bg">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_hotel_room_pop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_200"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_187">

                    <com.daqsoft.provider.view.convenientbanner.ConvenientBanner
                        android:id="@+id/cb_pop_hotel_room"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_187" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_pop_hotel_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_below="@+id/txt_pop_hotel_room_name"
                        android:id="@+id/txt_pop_hotel_room_tags"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_toLeftOf="@+id/img_pop_hotel_room_720"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/img_pop_hotel_room_720"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/hotel_details_720" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_Pop_hotel_room_base_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础信息"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/txt_hotel_room_area"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_hotel_room_num"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toRightOf="@+id/guideline"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_hotel_room_window"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/txt_hotel_room_area" />

                    <TextView
                        android:id="@+id/txt_hotel_room_breakfast"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toRightOf="@+id/guideline"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_hotel_room_area" />

                    <TextView
                        android:id="@+id/txt_hotel_room_bed_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_hotel_room_window" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_hotel_room_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="服务及其他"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_hotel_room_service_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_hotel_room_spcail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="房型特色"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_hotel_room_spcail_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_hotel_room_order_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="预订须知"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

             <TextView
                 android:id="@+id/txt_hotel_room_order_cance"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/dp_10"
                 android:textColor="@color/color_666"
                 android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/txt_hotel_room_confirm_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/txt_hotel_room_refund_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/txt_hotel_room_cash_include"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="费用包含"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/txt_hotel_room_cash_include_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>