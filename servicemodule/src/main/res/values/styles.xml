<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetEdit" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!--不浮现在活动上-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="QueryBusEditText">
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_45</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textColorHint">@color/color_999</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingBottom">@dimen/dp_11</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!--dialog进出动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_dis</item>
    </style>
</resources>
