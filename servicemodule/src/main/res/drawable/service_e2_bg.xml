<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <solid android:color="#4D36cd64"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/colorPrimary"/>
            <corners android:radius="@dimen/dp_3" />
        </shape>

    </item>
    <item>
        <shape
            android:shape="rectangle" >
            <stroke android:width="@dimen/dp_1" android:color="@color/divider_e2"/>
            <solid android:color="@color/white_fe"/>
            <corners android:radius="@dimen/dp_3" />
        </shape>
    </item>
</selector>
