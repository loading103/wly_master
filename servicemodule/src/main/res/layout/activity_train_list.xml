<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.daqsoft.servicemodule.ui.TrainListActivity">
    <data/>
    <RelativeLayout
        android:background="@color/color_fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rv_time"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_before_day"
                android:text="前一天"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_8"
                android:drawableStart="@mipmap/service_train_result_button_arrow_left_normal"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_choose_time"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:drawablePadding="@dimen/dp_17"
                android:drawableEnd="@mipmap/service_train_result_button_date_normal"
                android:background="@drawable/service_gray_stoke_bg"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="后一天"
                android:id="@+id/txt_next_day"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_8"
                android:textColor="@color/color_333"
                android:drawableEnd="@mipmap/service_train_result_button_arrow_right_normal"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/rv_time"
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/recy_train_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</layout>
