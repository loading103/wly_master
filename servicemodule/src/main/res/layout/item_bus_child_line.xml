<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_bus_address"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_13"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_5"
            android:drawableStart="@mipmap/service_bus_nearby_icon_bus_middle"
            android:includeFontPadding="false"
            android:background="@drawable/service_gray_radius"
            android:layout_width="@dimen/dp_57"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_child_line"
            android:layout_toEndOf="@+id/item_bus_address"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:src="@mipmap/service_bus_result_icon_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</layout>