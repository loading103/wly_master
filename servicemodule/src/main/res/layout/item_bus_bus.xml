<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_trafic"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_20"/>
    <View
        android:id="@+id/vertical_process"
        android:layout_toEndOf="@+id/img_trafic"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_18"
        android:background="@drawable/service_process"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_120"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_toEndOf="@+id/vertical_process"
        android:paddingTop="@dimen/dp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_toEndOf="@+id/tv_name"
        android:background="@drawable/service_green_stoke"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_3"
        android:text="上"
        android:textColor="@color/color_36cd64"
        android:textSize="@dimen/sp_10" />
    <RelativeLayout
        android:id="@+id/rv_station"
        android:layout_toEndOf="@+id/vertical_process"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/station_name"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:background="@drawable/green_radius"
            android:paddingStart="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/end_name"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_toEndOf="@+id/station_name"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
<TextView
    android:layout_toEndOf="@+id/vertical_process"
    android:id="@+id/station_num"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_below="@+id/rv_station"
    android:textColor="@color/color_999"
    android:textSize="@dimen/sp_13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


    <TextView
        android:layout_toEndOf="@+id/vertical_process"
        android:id="@+id/exit_name"
        android:paddingTop="@dimen/dp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/station_num"
        android:layout_marginTop="@dimen/dp_14"
        android:includeFontPadding="false"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/station_num"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toEndOf="@+id/exit_name"
        android:background="@drawable/service_green_stoke"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_3"
        android:text="下"
        android:textColor="@color/color_36cd64"
        android:textSize="@dimen/sp_10" />
</RelativeLayout>