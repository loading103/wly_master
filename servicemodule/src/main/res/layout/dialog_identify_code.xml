<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:paddingTop="@dimen/dp_20"
    android:background="@drawable/service_white_top_bottom_5_round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照识花" />
    <ImageView
        android:id="@+id/img_code"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_140"/>
    <TextView
        android:id="@+id/txt_hint"
        android:textSize="@dimen/sp_11"
        android:layout_below="@+id/img_code"
        android:layout_centerHorizontal="true"
        android:text="长按二维码识别小程序"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/color_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/dividing_line"
        android:layout_below="@+id/txt_hint"
        android:layout_width="match_parent"
        android:background="@color/dividing_line"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:id="@+id/tv_know"
        android:layout_below="@+id/dividing_line"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:textSize="@dimen/sp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15"
        android:textColor="@color/colorPrimary"
        android:text="知道了"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>