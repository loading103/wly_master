<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data/>
    <RelativeLayout
        android:id="@+id/rv_palne_date"
        android:background="@drawable/service_plane_time_slector"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:id="@+id/tv_plane_week"
            android:paddingTop="@dimen/dp_2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_plane_date"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_plane_week"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/color_f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_plane_price"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_plane_date"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</layout>