<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_2"
        app:cardMaxElevation="@dimen/dp_6"
        app:cardShadowColorStart="@color/f5"
        app:cardShadowColorEnd="@color/white"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            >

            <com.daqsoft.widget.RoundImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:type="round" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toRightOf="@+id/iv_header"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_header"
                tools:text="方三三方三三方三三方三三方三三方三三方三三方三三方三三方三三方三三方三三" />


            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_3"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="@dimen/dp_6"
                android:background="@drawable/shape_single_r_5"
                app:layout_constraintRight_toRightOf="parent"
                android:text="可签到" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:text="这三者并驾齐驱出现的时候，" />
            <View
                android:id="@+id/v_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_header"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:background="@color/line"
                />
            <LinearLayout
                android:id="@+id/ll_service"
                app:layout_constraintTop_toBottomOf="@id/v_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/dp_0"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_team_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="11"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/color_333"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="团队人数"
                            android:text="@string/volunteer_module_label_team_num"
                            android:layout_marginTop="@dimen/dp_6"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_999"
                            />
                    </LinearLayout>
                    <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_service_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="服务时长（小时）"
                        android:text="@string/volunteer_module_label_team_service_time"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_999"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_service_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="服务次数"
                        android:text="@string/volunteer_module_label_team_service_count"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_999"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_activity"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_service"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_12"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_12"
                tools:text="测试六十年代了富士康的发生率熟练度附近是领导发陆地上看风景"
                android:background="@drawable/volunteer_module_tip_bg"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>