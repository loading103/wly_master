<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.daqsoft.widget.RoundImageView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginTop="@dimen/dp_16"
                        android:scaleType="center"
                        app:type="round"
                        android:src="@mipmap/mine_profile_photo_default"
                        app:corner_radius="@dimen/dp_5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cbanner_story_detail"
                        tools:text="adf" />

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_user"
                        app:layout_constraintTop_toTopOf="@id/iv_user"
                        tools:text="dddddd" />

                    <TextView
                        android:id="@+id/tv_level_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/volunteer_module_level_bg_1"
                        android:textColor="@color/volunteer_module_level_1"
                        app:layout_constraintBottom_toBottomOf="@id/tv_user"
                        app:layout_constraintLeft_toRightOf="@+id/tv_user"
                        app:layout_constraintTop_toTopOf="@id/tv_user"
                        tools:text="一星团队" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_11"
                        app:layout_constraintLeft_toLeftOf="@id/tv_user"
                        app:layout_constraintTop_toBottomOf="@id/tv_user"
                        tools:text="测试打开房间" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    tools:text="成都90个旅游景点，名单都在这里，想去耍的赶紧点击观看" />

               <com.daqsoft.volunteer.view.MuiltImage2View
                   android:id="@+id/mi_images"
                   android:layout_marginTop="@dimen/dp_16"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/volunteer_shape_f5_5"
                    android:textSize="@dimen/sp_11"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/color_666"
                    android:drawableLeft="@mipmap/volunteer_myfollow_icon_link" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/color_666"
                    android:background="@drawable/volunteer_shape_f5_5"
                    android:drawableLeft="@mipmap/time_home_hot_position" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_20">

                    <TextView
                        android:id="@+id/tv_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/color_999"
                        android:drawableLeft="@mipmap/time_home_browse"
                        tools:text="22" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/color_999"
                        android:drawableLeft="@mipmap/time_home_list_comment"
                        tools:text="22" />

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/color_999"
                        android:drawableLeft="@mipmap/time_home_list_like"
                        tools:text="22" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/f5" />
    </LinearLayout>
</layout>
