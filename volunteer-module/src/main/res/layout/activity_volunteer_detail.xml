<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>

	<data>

		<import type="android.view.View" />

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_root"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>

		<androidx.core.widget.NestedScrollView
			android:id="@+id/scroll_view"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="@drawable/main_shape_white_back_5_radius"
			android:fillViewport="true"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:paddingBottom="@dimen/dp_60"
				>

				<ImageView
					android:id="@+id/iv_bg1"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp_200"
					android:scaleType="fitXY"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					/>

				<ImageView
					android:id="@+id/iv_cover"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp_200"
					android:layout_marginTop="16dp"
					android:background="@color/black_40"
					android:scaleType="fitXY"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					/>

				<com.daqsoft.baselib.widgets.ArcImageView
					android:id="@+id/av_head"
					android:layout_width="@dimen/dp_66"
					android:layout_height="@dimen/dp_66"
					android:layout_marginLeft="@dimen/dp_23"
					android:layout_marginTop="@dimen/dp_32"
					android:src="@drawable/mine_profile_photo_default"
					app:is_circle="true"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					/>

				<ImageView
					android:id="@+id/iv_flag"
					android:layout_width="@dimen/dp_20"
					android:layout_height="@dimen/dp_15"
					android:src="@mipmap/volunteer_single_details_icon_tag"
					app:layout_constraintRight_toRightOf="@id/av_head"
					app:layout_constraintTop_toTopOf="@id/av_head"
					/>

				<TextView
					android:id="@+id/tv_level_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp_5"
					android:background="@drawable/volunteer_module_level_1"
					android:text="一星志愿者"
					android:textColor="@color/white"
					android:visibility="gone"
					android:textSize="@dimen/sp_9"
					app:layout_constraintBottom_toBottomOf="@id/iv_level_icon"
					app:layout_constraintLeft_toLeftOf="@id/iv_level_icon"
					/>

				<ImageView
					android:id="@+id/iv_level_icon"
					android:layout_width="@dimen/dp_16"
					android:layout_height="@dimen/dp_18"
					android:layout_marginLeft="@dimen/dp_20"
					android:visibility="gone"
					android:src="@mipmap/volunteer_single_list_icon_level_1"
					app:layout_constraintBottom_toBottomOf="@+id/av_head"
					app:layout_constraintLeft_toLeftOf="parent"
					/>

				<TextView
					android:id="@+id/tv_volunteer_name"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp_18"
					android:layout_marginTop="@dimen/dp_9"
					android:layout_marginRight="@dimen/dp_20"
					android:ellipsize="end"
					android:singleLine="true"
					android:textColor="@color/white"
					android:textSize="@dimen/sp_18"
					android:textStyle="bold"
					app:layout_constraintLeft_toRightOf="@id/av_head"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="@id/av_head"
					tools:text="你大爷"
					/>

				<TextView
					android:id="@+id/tv_volunteer_address"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp_18"
					android:layout_marginTop="@dimen/dp_9"
					android:layout_marginRight="@dimen/dp_20"
					android:ellipsize="end"
					android:singleLine="true"
					android:textColor="@color/white"
					android:textSize="@dimen/sp_13"
					android:textStyle="bold"
					app:layout_constraintLeft_toRightOf="@id/av_head"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/tv_volunteer_name"
					tools:text="你大爷"
					/>

				<LinearLayout
                    android:id="@+id/ll_service"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dp_20"
					android:layout_marginTop="@dimen/dp_36"
					android:orientation="horizontal"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toBottomOf="@id/tv_level_title"
					>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical"
						>

						<TextView
							android:id="@+id/tv_service_time"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="false"
							android:textColor="@color/white"
							android:textSize="@dimen/sp_16"
							android:textStyle="bold"
							tools:text="100小时"
							/>

						<TextView
							android:id="@+id/tv_service_time_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp_6"
							android:includeFontPadding="false"
							android:textColor="@color/color_a_ff_0_5"
							android:textSize="@dimen/sp_11"
							android:textStyle="bold"
							android:text="服务时长"
							/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp_32"
						android:gravity="center"
						android:orientation="vertical"
						>

						<TextView
							android:id="@+id/tv_service_count"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="false"
							android:textColor="@color/white"
							android:textSize="@dimen/sp_16"
							android:textStyle="bold"
							tools:text="100"
							/>

						<TextView
							android:id="@+id/tv_service_count_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp_6"
							android:includeFontPadding="false"
							android:textColor="@color/color_a_ff_0_5"
							android:textSize="@dimen/sp_11"
							android:textStyle="bold"
							android:text="服务次数"
							/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp_32"
						android:gravity="center"
						android:orientation="vertical"
						>

						<TextView
							android:id="@+id/tv_score"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="false"
							android:textColor="@color/white"
							android:textSize="@dimen/sp_16"
							android:textStyle="bold"
							tools:text="100"
							/>

						<TextView
							android:id="@+id/tv_score_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp_6"
							android:includeFontPadding="false"
							android:textColor="@color/color_a_ff_0_5"
							android:textSize="@dimen/sp_11"
							android:textStyle="bold"
							android:text="公益积分"
							/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp_32"
						android:gravity="center"
						android:orientation="vertical"
						>

						<TextView
							android:id="@+id/tv_rank"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="false"
							android:textColor="@color/white"
							android:textSize="@dimen/sp_16"
							android:textStyle="bold"
							tools:text="100"
							/>

						<TextView
							android:id="@+id/tv_rank_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dp_6"
							android:includeFontPadding="false"
							android:textColor="@color/color_a_ff_0_5"
							android:textSize="@dimen/sp_11"
							android:textStyle="bold"
							android:text="个人排名"
							/>
					</LinearLayout>
				</LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_service"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="@drawable/shape_provider_fff_5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                   <include
                       android:id="@+id/m_service"
                       layout="@layout/item_content_more_title"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dp_32"
                       />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_service"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <include
                        android:id="@+id/m_team"
                        layout="@layout/item_content_more_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_32"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_teams"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.core.widget.NestedScrollView>

		<LinearLayout
			android:id="@+id/ll_bottom_btn"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_52"
			android:background="@color/white"
			android:gravity="center"
			android:orientation="horizontal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			>

			<TextView
				android:id="@+id/tv_like"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:drawableTop="@mipmap/bottom_icon_like_normal"
				android:drawablePadding="@dimen/dp_5"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/color_666"
				android:textSize="@dimen/sp_11"
				/>

			<TextView
				android:id="@+id/tv_collect"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@mipmap/bottom_icon_collect_normal"
				android:drawablePadding="@dimen/dp_5"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/color_666"
				/>

			<TextView
				android:id="@+id/tv_share"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@mipmap/bottom_icon_share"
				android:drawablePadding="@dimen/dp_5"
				android:gravity="center"
				android:text="转发"
				android:textColor="@color/txt_gray_black"
				android:textSize="@dimen/sp_11"
				/>

		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>


</layout>