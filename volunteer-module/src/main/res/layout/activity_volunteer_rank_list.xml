<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/volunteer_module_rank_bg"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_top_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/volunteer_rank_bg"
        />
        <LinearLayout
            android:id="@+id/ll_rank_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:background="@drawable/volunteer_module_rank_top_title_bg"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_service_rank"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                tools:text="服务时长榜"
                android:text="服务时长榜"
                android:textColor="@color/volunteer_rank_title"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/volunteer_rank_title_bg"
                />
            <TextView
                android:id="@+id/tv_score_rank"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                tools:text="积分榜"
                android:text="积分榜"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/volunteer_rank_title"
                android:textSize="@dimen/sp_14"
                android:paddingVertical="@dimen/dp_10"
                android:background="@drawable/volunteer_rank_title_bg"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_rank_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_top_bg"
            android:text="志愿者榜"
            android:padding="@dimen/dp_6"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/sp_10"
            android:drawableLeft="@mipmap/volunteer_rank_button_switch"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_92"
            android:background="@color/volunteer_module_btn_bg"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_rank"
            app:layout_constraintTop_toBottomOf="@id/tv_rank_switch"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_rank_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:src="@mipmap/volunteer_rank_list_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
                <LinearLayout
                    android:id="@+id/ll_tab"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="@id/iv_rank_top_bg"
                    app:layout_constraintRight_toRightOf="@id/iv_rank_top_bg"
                    app:layout_constraintTop_toTopOf="@id/iv_rank_top_bg"
                    app:layout_constraintBottom_toBottomOf="@id/iv_rank_top_bg"
                    android:layout_width="@dimen/dp_0"
                    android:layout_marginHorizontal="@dimen/dp_38"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_week"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/volunteer_tab_title_selector"
                        android:background="@drawable/volunteer_rank_tab_bg_selector"
                        android:layout_width="wrap_content"
                        android:text="周榜单"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_9"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_month"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/volunteer_tab_title_selector"
                        android:background="@drawable/volunteer_rank_tab_bg_selector"
                        android:layout_width="wrap_content"
                        android:text="月度榜单"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_9"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_quarter"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/volunteer_tab_title_selector"
                        android:background="@drawable/volunteer_rank_tab_bg_selector"
                        android:layout_width="wrap_content"
                        android:text="季度榜单"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_9"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_year"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/volunteer_tab_title_selector"
                        android:background="@drawable/volunteer_rank_tab_bg_selector"
                        android:layout_width="wrap_content"
                        android:text="年度榜单"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
         <LinearLayout
             android:id="@+id/ll_rank_list"
             app:layout_constraintTop_toBottomOf="@+id/cl_rank"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_width="@dimen/dp_0"
             android:layout_marginHorizontal="@dimen/dp_38"
             android:background="@color/white"
             android:orientation="vertical"
             android:layout_marginBottom="@dimen/dp_50"
             android:layout_height="0dp">

             <TextView
                 android:id="@+id/tv_update_tips"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:textColor="@color/color_999"
                 android:textSize="@dimen/sp_10"
                 tools:text="每周五下午6点进行更新" />

             <ScrollView
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_marginTop="@dimen/dp_12"
               android:layout_height="0dp">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                    <include
                        android:id="@+id/volunteer_my_rank"
                        layout="@layout/volunteer_rank_list_item"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginHorizontal="@dimen/dp_19"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />
                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rv_rank"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:layout_goneMarginTop="@dimen/dp_0"
                       app:layout_constraintTop_toBottomOf="@id/volunteer_my_rank"
                       android:layout_marginHorizontal="@dimen/dp_19"
                       android:layout_marginTop="@dimen/dp_12"
                       android:visibility="gone"
                       />
                   <LinearLayout
                       android:id="@+id/ll_timer"
                       android:orientation="vertical"
                       app:layout_constraintTop_toBottomOf="@id/volunteer_my_rank"
                        app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:layout_width="wrap_content"
                       android:gravity="center"
                       android:visibility="gone"
                       android:layout_marginTop="@dimen/dp_40"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tv_timer_title"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/color_333"
                           android:textSize="@dimen/sp_18"
                           android:text="距离公布榜单还剩"
                           />
                       <com.daqsoft.baselib.widgets.downview.DownView
                           android:id="@+id/dv_time_rank"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginTop="@dimen/dp_16"
                           app:isConvertDaysToHours="false"
                           app:isHideTimeBackground="true"
                           app:isShowDay="true"
                           app:isShowHour="true"
                           app:isShowMillisecond="false"
                           app:isShowMinute="true"
                           app:isShowSecond="true"
                           app:isShowTimeBgDivisionLine="false"
                           app:isTimeTextBold="true"
                           app:suffixGravity="bottom"
                           app:suffixLRMargin="@dimen/dp_1"
                           app:suffixDay="天"
                           app:suffixHour="时"
                           app:suffixMinute="分"
                           app:suffixSecond="秒"
                           app:suffixTextColor="@color/color_666"
                           app:suffixTextSize="@dimen/sp_12"
                           app:timeBgBorderColor="@color/white"
                           app:timeBgColor="@color/white"
                           app:suffixDayRightMargin="@dimen/dp_12"
                           app:suffixHourRightMargin="@dimen/dp_12"
                           app:suffixMinuteRightMargin="@dimen/dp_12"
                           app:timeTextColor="@color/volunteer_module_btn_bg"
                           app:timeTextSize="@dimen/sp_18" />
                   </LinearLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </ScrollView>
         </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/volunteer_rank_tab_bottom_bg"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_upper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_48"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/volunteer_rank_bottom_btn_selector"
                android:gravity="center"
                android:text="上一周"
                android:textColor="@color/volunteer_btn_txt_selector"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/volunteer_btn_txt_selector"
                android:text="下一周"
                android:gravity="center"
                android:enabled="false"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/volunteer_rank_bottom_btn_selector"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>