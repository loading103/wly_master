<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/dp_20"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_16"
            android:src="@mipmap/volunteer_personal_apply_history_point"
            android:layout_height="@dimen/dp_16"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="@id/iv_icon"
            android:background="@color/ff4e4e"
            />
        <TextView
            android:id="@+id/tv_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="2019-08-25 18:56:32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="志愿者注册 审核中"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            app:layout_constraintLeft_toLeftOf="@id/tv_status"
            android:textColor="@color/ff4e4e"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_view_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:text="查看详情"
            android:drawablePadding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/volunteer_personal_apply_history_icon_arrow"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>