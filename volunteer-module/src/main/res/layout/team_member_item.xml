<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/dp_16"
        android:layout_height="wrap_content">
        <com.daqsoft.widget.RoundImageView
            android:id="@+id/rv_head"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            app:type="circle"
            />
        <ImageView
            android:id="@+id/iv_flag"
            app:layout_constraintRight_toRightOf="@id/rv_head"
            app:layout_constraintTop_toTopOf="@id/rv_head"
            android:src="@mipmap/volunteer_single_details_icon_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@id/rv_head"
            app:layout_constraintLeft_toRightOf="@id/rv_head"
            android:layout_marginLeft="@dimen/dp_16"
            tools:text="测试测试"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_level"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            android:layout_marginLeft="@dimen/dp_9"
            tools:text="测试测试"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责人"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            android:textColor="@color/color_999"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tv_num"
            tools:text="111 111 11"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>