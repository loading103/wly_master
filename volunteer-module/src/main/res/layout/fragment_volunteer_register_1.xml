<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/volunteer_single_register_bg_top"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/volunteer_single_register_title"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_apply_txt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_name"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="@string/volunteer_module_register_label_hint_name"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/color_999"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_sex"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="@string/volunteer_module_register_label_hint_sex"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/color_999"
                android:drawableRight="@mipmap/activity_details_right"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_national"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_national"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="@string/volunteer_module_register_label_hint_national"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/color_999"
                android:drawableRight="@mipmap/activity_details_right"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_idcard"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="@string/volunteer_module_register_label_hint_idcard"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/color_999"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_phone"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="@string/volunteer_module_register_label_hint_phone"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/color_999"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableRight="@mipmap/tianbao_xingxing"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:text="@string/volunteer_module_register_label_code"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_weight="2"
                    android:hint="@string/volunteer_module_register_label_hint_code"
                    android:paddingTop="@dimen/dp_16"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/dp_16"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:id="@+id/bind_phone_code_avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_4"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/volunteer_module_register_label_hint_send_code"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/dividing_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/volunteer_reg_check"
                    android:text="@string/volunteer_module_register_label_agree_txt"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/sp_13"
                   />

                <TextView
                    android:id="@+id/registerAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_module_register_label_agree_protcol"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/volunteer_single_register_bg_bottom"
                  />
              <TextView
                  android:id="@+id/tv_next"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="@dimen/dp_40"
                  android:textSize="@dimen/sp_16"
                  android:textColor="@color/white"
                  android:background="@drawable/shape_btn_primary_5"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginVertical="@dimen/dp_30"
                  android:paddingVertical="@dimen/dp_15"
                  android:text="下一步"
                  />
          </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>