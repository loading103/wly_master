<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/color_f5f5f5"
            android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/volunteer_module_team_register_label_txt"
                  android:textColor="@color/color_333"
                  android:textSize="@dimen/sp_23"
                  android:layout_marginTop="@dimen/dp_20"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_12"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:text="@string/volunteer_module_register_label_hint_txt"
                  android:textColor="@color/txt_gray_black"
                  android:textSize="@dimen/sp_16" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_32"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:drawableRight="@mipmap/tianbao_xingxing"
                  android:drawablePadding="@dimen/dp_4"
                  android:text="@string/volunteer_module_register_label_service_region"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/tv_service_region"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:hint="@string/volunteer_module_register_label_hint_service_region"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingBottom="@dimen/dp_16"
                  android:textColor="@color/txt_black"
                  android:textColorHint="@color/color_999"
                  android:drawableRight="@mipmap/activity_details_right"
                  android:textSize="@dimen/sp_16" />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_0_5"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:background="@color/dividing_line" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_16"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:drawableRight="@mipmap/tianbao_xingxing"
                  android:drawablePadding="@dimen/dp_4"
                  android:text="@string/volunteer_module_register_label_team_region"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/tv_volunteer_region"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/volunteer_module_register_label_hint_team_region"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:paddingBottom="@dimen/dp_16"
                  android:textColor="@color/txt_black"
                  android:textColorHint="@color/color_999"
                  android:drawableRight="@mipmap/activity_details_right"
                  android:textSize="@dimen/sp_16" />
              <View
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_height="@dimen/dp_0_5"
                  android:background="@color/dividing_line" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_16"
                  android:drawablePadding="@dimen/dp_4"
                  android:drawableRight="@mipmap/tianbao_xingxing"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:text="@string/volunteer_module_team_register_label_teamname"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />
              <EditText
                  android:id="@+id/et_teamname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:hint="@string/volunteer_module_team_register_label_hint_teamname"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingBottom="@dimen/dp_16"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:textColor="@color/txt_black"
                  android:maxLength="50"
                  android:textColorHint="@color/color_999"
                  android:textSize="@dimen/sp_16" />
              <View
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_height="@dimen/dp_0_5"
                  android:background="@color/dividing_line" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_16"
                  android:drawablePadding="@dimen/dp_4"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:drawableRight="@mipmap/tianbao_xingxing"
                  android:text="@string/volunteer_module_team_register_service_type"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/tv_service_type"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableRight="@mipmap/activity_details_right"
                  android:hint="@string/volunteer_module_team_register_hint_service_type"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingBottom="@dimen/dp_16"
                  android:textColor="@color/txt_black"
                  android:textColorHint="@color/color_999"
                  android:textSize="@dimen/sp_16" />

              <View
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_height="@dimen/dp_0_5"
                  android:background="@color/dividing_line" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_16"
                  android:drawablePadding="@dimen/dp_4"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:drawableRight="@mipmap/tianbao_xingxing"
                  android:text="@string/volunteer_module_team_register_create_time"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/tv_team_create_time"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableRight="@mipmap/activity_details_right"
                  android:hint="@string/volunteer_module_team_register_hint_service_type"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingBottom="@dimen/dp_16"
                  android:textColor="@color/txt_black"
                  android:textColorHint="@color/color_999"
                  android:textSize="@dimen/sp_16" />

              <View
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/dp_20"
                  android:layout_height="@dimen/dp_0_5"
                  android:background="@color/dividing_line" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_16"
                  android:drawablePadding="@dimen/dp_4"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:text="@string/volunteer_module_team_register_company"
                  android:textColor="@color/txt_black"
                  android:textSize="@dimen/sp_16"
                  android:textStyle="bold" />
              <EditText
                  android:id="@+id/et_school"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:hint="@string/volunteer_module_team_register_hint_company"
                  android:paddingTop="@dimen/dp_16"
                  android:paddingBottom="@dimen/dp_16"
                  android:paddingHorizontal="@dimen/dp_20"
                  android:textColor="@color/txt_black"
                  android:textColorHint="@color/color_999"
                  android:textSize="@dimen/sp_16" />
          </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white"
               android:layout_marginTop="@dimen/dp_8"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/dp_4"
                   android:paddingTop="@dimen/dp_16"
                   android:text="@string/volunteer_module_team_register_logo"
                   android:textColor="@color/txt_black"
                   android:textSize="@dimen/sp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textStyle="bold" />
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:scaleType="fitXY"
                    android:layout_marginVertical="@dimen/dp_16"
                    android:src="@mipmap/volunteer_team_register_upload_logo"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_16"
                   android:drawablePadding="@dimen/dp_4"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:drawableRight="@mipmap/tianbao_xingxing"
                   android:text="@string/volunteer_module_team_register_address"
                   android:textColor="@color/txt_black"
                   android:textSize="@dimen/sp_16"
                   android:textStyle="bold" />
               <TextView
                   android:id="@+id/tv_address"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/volunteer_module_team_register_hint_address"
                   android:paddingTop="@dimen/dp_16"
                   android:paddingBottom="@dimen/dp_16"
                   android:textColor="@color/txt_black"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textColorHint="@color/color_999"
                   android:drawableRight="@mipmap/activity_details_right"
                   android:textSize="@dimen/sp_16" />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />
               <EditText
                   android:id="@+id/et_team_address_detail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@null"
                   android:hint="@string/volunteer_module_register_address"
                   android:paddingTop="@dimen/dp_16"
                   android:paddingBottom="@dimen/dp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textColor="@color/txt_black"
                   android:textColorHint="@color/color_999"
                   android:textSize="@dimen/sp_16" />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/dp_4"
                   android:paddingTop="@dimen/dp_16"
                   android:text="@string/volunteer_module_team_register_contact"
                   android:textColor="@color/txt_black"
                   android:drawableRight="@mipmap/tianbao_xingxing"
                   android:textSize="@dimen/sp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textStyle="bold" />
               <EditText
                   android:id="@+id/et_contact"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@null"
                   android:hint="@string/volunteer_module_team_register_hint_contact"
                   android:paddingTop="@dimen/dp_16"
                   android:maxLength="11"
                   android:paddingBottom="@dimen/dp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textColor="@color/txt_black"
                   android:textColorHint="@color/color_999"
                   android:textSize="@dimen/sp_16" />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/dp_4"
                   android:paddingTop="@dimen/dp_16"
                   android:text="@string/volunteer_module_team_register_brand"
                   android:textColor="@color/txt_black"
                   android:textSize="@dimen/sp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tv_brand"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="@string/volunteer_module_team_register_hint_brand"
                   android:paddingTop="@dimen/dp_16"
                   android:paddingBottom="@dimen/dp_16"
                   android:textColor="@color/txt_black"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textColorHint="@color/color_999"
                   android:drawableRight="@mipmap/activity_details_right"
                   android:textSize="@dimen/sp_16" />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/dp_4"
                   android:paddingTop="@dimen/dp_16"
                   android:text="@string/volunteer_module_team_register_introduce"
                   android:textColor="@color/txt_black"
                   android:textSize="@dimen/sp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:textStyle="bold" />
               <EditText
                   android:id="@+id/et_introduce"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_100"
                   android:background="@null"
                   android:hint="@string/volunteer_module_team_register_hint_introduce"
                   android:paddingBottom="@dimen/dp_16"
                   android:paddingHorizontal="@dimen/dp_20"
                   android:layout_marginTop="@dimen/dp_16"
                   android:maxLength="200"
                   android:gravity="left|top"
                   android:textColor="@color/txt_black"
                   android:textColorHint="@color/color_999"
                   android:textSize="@dimen/sp_16" />
               <View
                   android:layout_width="match_parent"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_height="@dimen/dp_0_5"
                   android:background="@color/dividing_line" />

               <TextView
                   android:id="@+id/tv_submit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:textColor="@color/white"
                   android:background="@drawable/shape_btn_primary_5"
                   android:textAlignment="center"
                   android:gravity="center"
                   android:layout_marginVertical="@dimen/dp_30"
                   android:paddingVertical="@dimen/dp_15"
                   android:text="提交"
                   />
           </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>