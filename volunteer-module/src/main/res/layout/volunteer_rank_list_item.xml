<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <com.daqsoft.widget.RoundImageView
            android:id="@+id/ri_head"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:type="circle"
            app:layout_constraintLeft_toRightOf="@id/tv_rank_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginVertical="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@id/ri_head"
            app:layout_constraintLeft_toRightOf="@id/ri_head"
            app:layout_constraintRight_toLeftOf="@+id/tv_service_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="测试"
            />
        <TextView
            android:id="@+id/tv_address"
            app:layout_constraintLeft_toRightOf="@id/ri_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_service_data"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_10"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="上海自来水来自海上上海自来水来自海上上海自来水来自海上"
            />

        <TextView
            android:id="@+id/tv_service_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="99"
            app:layout_constraintBottom_toBottomOf="@id/tv_unit"
            app:layout_constraintRight_toLeftOf="@id/tv_unit"
            app:layout_constraintTop_toTopOf="@id/tv_unit"
            android:textSize="@dimen/sp_16"
            android:includeFontPadding="false"
            />
        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_9"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/dp_12"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>