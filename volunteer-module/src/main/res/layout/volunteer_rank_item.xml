<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dp_320"
        android:id="@+id/cl_root"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@mipmap/volunteer_index_rank_single_time"
        android:layout_height="@dimen/dp_90">
            <LinearLayout
                android:id="@+id/ll_top1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/dp_220"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_32"
                android:paddingRight="@dimen/dp_16"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_1"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    tools:text="蕾姐"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_content_1"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    tools:text="10时长"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_top2"
                android:layout_width="@dimen/dp_220"
                app:layout_constraintTop_toBottomOf="@id/ll_top1"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_33"
                android:layout_marginTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_16"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_2"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/white"
                    tools:text="蕾姐"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_content_2"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/white"
                    tools:text="10时长"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_top3"
                android:paddingLeft="@dimen/dp_33"
                android:layout_width="@dimen/dp_220"
                android:paddingRight="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/ll_top2"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_3"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/white"
                    tools:text="蕾姐"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_content_3"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/white"
                    tools:text="10时长"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>