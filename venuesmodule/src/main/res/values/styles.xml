<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--便捷服务 TextView-->
    <style name="tv_details_server">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--便捷服务 ImageView-->
    <style name="iv_details_server">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    <!--便捷服务 LinearLayout-->
    <style name="ll_details_server">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:background">@drawable/shape_edit_search_3</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
