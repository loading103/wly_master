<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white">

                <FrameLayout
                    android:id="@+id/v_pre_month"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/dp_22"
                        android:scaleType="fitXY"
                        android:src="@mipmap/veune_book_button_arrow_left_normal" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_venue_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/v_next_month"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:scaleType="fitXY"
                        android:src="@mipmap/veune_book_button_arrow_rihgt_normal" />
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="二"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="三"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="四"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="五"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="六"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_e9e9e9" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_venue_selec_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_venue_reservation_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_toLeftOf="@+id/txt_venue_reservation_tip_more"
                    android:background="@color/f5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_venue_reservation_tip_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/f5"
                    android:text="查看全部 >"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>

