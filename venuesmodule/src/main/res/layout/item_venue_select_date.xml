<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/llv_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_12"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_venue_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                tools:text="05月08日" />

            <TextView
                android:id="@+id/tv_venue_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                tools:text="今天" />

            <TextView
                android:id="@+id/tv_venue_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_4"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_12"
                tools:text="余1520" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rv_more_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_more_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_more_date"
                android:text="日期"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@+id/tv_more_date"
                android:src="@mipmap/venue_details_more" />
            "
        </RelativeLayout>
    </RelativeLayout>
</layout>
