<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_writer_off_startus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center_horizontal"
                android:textColor="@color/c_36cd64"
                android:textSize="@dimen/sp_18"
                tools:text="核销成功，欢迎入园" />

            <TextView
                android:id="@+id/tv_writer_off_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_horizontal"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_13"
                tools:text="2020-05-13 星期三" />

            <TextView
                android:id="@+id/tv_writer_off_current_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:textColor="@color/c_36cd64"
                android:textSize="@dimen/sp_18"
                tools:text="08:59:32" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/venue_reservation_info"
                android:textColor="@color/color_333"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12">

                <ImageView
                    android:id="@+id/img_reservation"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_reservation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toRightOf="@+id/img_reservation"
                    app:layout_constraintTop_toTopOf="@+id/img_reservation"
                    tools:text="成华区艺术中心" />

                <TextView
                    android:id="@+id/tv_reservation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费"
                    android:textColor="@color/c_36cd64"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_reservation_name" />

                <TextView
                    android:id="@+id/tv_reservation_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="免费"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toRightOf="@+id/img_reservation"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reservation_name" />

                <TextView
                    android:id="@+id/tv_reservation_pay_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="x1"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reservation_price" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/e8e8e8" />

            <TextView
                android:id="@+id/tv_reservation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/venue_reservation_type"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </ScrollView>
</layout>
