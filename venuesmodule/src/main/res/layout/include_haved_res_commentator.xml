<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_back_f5_r5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_today_haved_res_comtator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:includeFontPadding="false"
            android:text="@string/venue_today_have_res_comtator"
            android:textColor="@color/c_36cd64"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_comtator_extime_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:includeFontPadding="false"
            android:text="讲解时间"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_today_haved_res_comtator" />

        <TextView
            android:id="@+id/tv_comtator_extime_value"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_extime_label"
            app:layout_constraintLeft_toRightOf="@+id/tv_comtator_extime_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comtator_extime_label"
            tools:text="20219.05.05 10:30-18:00" />

        <TextView
            android:id="@+id/tv_comtator_lg_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="讲解语言"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comtator_extime_value" />

        <TextView
            android:id="@+id/tv_comtator_lg_value"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_lg_label"
            app:layout_constraintLeft_toRightOf="@+id/tv_comtator_lg_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comtator_lg_label"
            tools:text="中文" />

        <TextView
            android:id="@+id/tv_comtator_exhall_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="讲解展厅"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comtator_lg_label" />

        <LinearLayout
            android:id="@+id/lv_comtator_exhall_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/tv_comtator_exhall_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comtator_lg_label">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comtator_cost_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="讲解费用"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_comtator_exhall_value" />

        <TextView
            android:id="@+id/tv_comtator_cost_value"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_cost_label"
            app:layout_constraintLeft_toRightOf="@+id/tv_comtator_cost_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comtator_cost_label"
            tools:text="120元（到馆支付）" />

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:scaleType="fitXY"
            android:src="@mipmap/venue_book_jieshuo_tag_yiyuyue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
