<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll_ci_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_91">
        </RelativeLayout>

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/title"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            app:layout_constraintLeft_toLeftOf="@id/ll_ci_img"
            app:layout_constraintRight_toRightOf="@id/ll_ci_img"
            app:layout_constraintTop_toBottomOf="@id/ll_ci_img"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_11"
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
