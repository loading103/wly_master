<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_venue_rsn_ctr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableLeft="@mipmap/whcgxq_bt_bq"
        android:drawablePadding="@dimen/dp_15"
        android:text="预约讲解员"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_venue_rsn_ctr_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_venue_rsn_ctr_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        android:text="当前：可预约"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/swh_venue_rsn_ctr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:thumb="@drawable/venue_ctr_19_thumb_selector"
            android:track="@drawable/venue_ctr_12_selector" />

        <TextView
            android:id="@+id/txt_venue_rsn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/swh_venue_rsn_ctr"
            android:text="开启"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_venues_rsn_ctr_rule"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讲解费用规则，到馆后支付："
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_venue_rtn_ctr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_reservation_ctr_time"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/txt_venue_rsn_ctr_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_toRightOf="@+id/tv_venue_rtn_ctr_time"
            android:hint="@string/venue_reservation_ctr_hint_time"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="@dimen/sp_15"
            tools:text="免费" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/venue_details_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/e8e8e8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_venue_rtn_ctr_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_reservation_ctr_language"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/txt_venue_rsn_ctr_language_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_toRightOf="@+id/tv_venue_rtn_ctr_language"
            android:hint="@string/venue_reservation_ctr_hint_time"
            android:text="中文"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="@dimen/sp_15"
            tools:text="免费" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/venue_details_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/f5" />

    <TextView
        android:id="@+id/tv_venue_rsn_ctr_show_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableLeft="@mipmap/whcgxq_bt_bq"
        android:drawablePadding="@dimen/dp_15"
        android:text="讲解展厅"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

</LinearLayout>
</layout>