<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:background="@drawable/selector_activity_room_date"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_height="wrap_content">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_9"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_room_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="02-20"
                android:textSize="@dimen/sp_11"
                android:textColor="@drawable/color_activity_room_date_top_txt"
                />
            <TextView
                android:id="@+id/tv_room_order_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_room_order_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dp_6"
                tools:text="周一"
                android:textSize="@dimen/sp_12"
                android:textColor="@drawable/color_activity_room_date_txt"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/iv_room_date_order"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/venue_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订"
                android:textSize="@dimen/dp_9"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"

                />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>