                    <com.daqsoft.venuesmodule.activity.widgets.VenueCommentaryView
                        android:id="@+id/vcv_commentary_speaking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <!--场馆活动-->
                    <com.daqsoft.venuesmodule.activity.widgets.VenueActivitesView
                        android:id="@+id/vav_venue_acitvity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <!--活动室-->
                    <com.daqsoft.venuesmodule.activity.widgets.VenueActivityRoomView
                        android:id="@+id/varv_venue_activity_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <!--场馆资讯-->
                    <com.daqsoft.provider.businessview.view.ProviderContentView
                        android:id="@+id/prv_conent_ls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <!--用户评论-->
                    <com.daqsoft.venuesmodule.activity.widgets.VenueCommentLsView
                        android:id="@+id/vnc_venue_coments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <!--周边推荐-->
                    <com.daqsoft.venuesmodule.activity.widgets.VenueRecommendView
                        android:id="@+id/vnc_venue_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <!--读故事-->
                    <com.daqsoft.venuesmodule.activity.widgets.VenueStoriesView
                        android:id="@+id/vns_venue_stoies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <!--交通信息-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_venues_details_traffic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_60"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:visibility="@{model.venuesDetailsBean.trafficInfo.equals(``)?View.GONE:View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@+id/cl_venues_details_content">

                        <TextView
                            android:id="@+id/venues_details_traffic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/whcgxq_bt_bq"
                            android:drawablePadding="@dimen/dp_12"
                            android:text="@string/details_traffic_info"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/sp_19"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.daqsoft.provider.view.web.LoadMoreWebView
                            android:id="@+id/web_venues_details_traffic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_28"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintTop_toBottomOf="@+id/venues_details_traffic" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>


        </com.daqsoft.provider.scrollview.DqScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_top_scroll_stick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line_venues_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/e8e8e8"
            app:layout_constraintBottom_toTopOf="@+id/v_main_activity_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:orientation="horizontal"
            android:id="@+id/v_main_activity_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_thumb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/venue_bottom_icon_like_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@{likeNum}"
                    android:textColor="@color/txt_gray_black"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/venue_bottom_icon_collect_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@{collectNum}"
                    android:textColor="@color/txt_gray_black"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/venue_bottom_icon_comment"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/venue_writer_comment"
                    android:textColor="@color/txt_gray_black"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/venue_bottom_icon_share"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/venue_share"
                    android:textColor="@color/txt_gray_black"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/txt_venue_reservation"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="@string/venue_reservation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:text="加入行程"
                android:visibility="gone"
                android:id="@+id/add_itinerary"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff6b53"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/dividing_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>