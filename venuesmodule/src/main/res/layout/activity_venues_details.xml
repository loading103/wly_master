                                <TextView
                                    style="@style/tv_details_server"
                                    android:text="@string/details_server_complaint" />

                                <ImageView
                                    style="@style/iv_details_server"
                                    android:src="@mipmap/whcgxq_bjfw_lyts" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <!--场馆介绍-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_venues_details_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_60"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:visibility="@{model.venuesDetailsBean.introduce.equals(``)?View.GONE:View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@+id/cl_venues_details_server">

                        <TextView
                            android:id="@+id/venues_details_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/whcgxq_bt_bq"
                            android:drawablePadding="@dimen/dp_12"
                            android:text="@string/details_venues_content"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/sp_19"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
