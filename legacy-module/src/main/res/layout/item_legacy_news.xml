<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333"
            app:layout_constraintRight_toLeftOf="@+id/av_icon"
            android:layout_marginRight="@dimen/dp_20"
            android:textStyle="bold"
            tools:text="你好的说法就是考虑到附近酸辣粉尽量少打飞机杀戮空间了"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintVertical_bias="1"
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/av_icon"
            tools:text="成都市你大哥"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/tv_type"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_type"
            tools:text="成都市你大哥"
            />
        <com.daqsoft.baselib.widgets.ArcImageView
            android:id="@+id/av_icon"
            app:corner_top_left_radius="@dimen/dp_5"
            app:corner_top_right_radius="@dimen/dp_5"
            app:corner_bottom_left_radius="@dimen/dp_5"
            app:corner_bottom_right_radius="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="107dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:id="@+id/line"
            android:background="@color/e8e8e8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp">
        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>