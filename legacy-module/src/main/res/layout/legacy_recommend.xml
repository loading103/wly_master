<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
       >

        <TextView

            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:text="@string/legacy_module_legacy_recommend"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommend_title" />

        <TextView
            android:id="@+id/behalf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recy_recommend"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/legacy_module_legacy_behalf"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>