<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/legacy_module_legacy_video"
                    android:textColor="@color/legacy_module_34ac9e"
                    android:textSize="@dimen/sp_16" />

                <com.flyco.roundview.RoundFrameLayout
                    android:id="@+id/v_video"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    app:rv_backgroundColor="@color/legacy_module_34ac9e"
                    app:rv_cornerRadius="@dimen/dp_2" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/legacy_module_legacy_audio"
                    android:textColor="@color/legacy_module_34ac9e"
                    android:textSize="@dimen/sp_16" />

                <com.flyco.roundview.RoundFrameLayout
                    android:id="@+id/v_audio"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    app:rv_backgroundColor="@color/legacy_module_34ac9e"
                    app:rv_cornerRadius="@dimen/dp_2" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>