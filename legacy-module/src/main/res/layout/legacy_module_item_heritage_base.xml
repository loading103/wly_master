<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10">

        <com.daqsoft.widget.RoundImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_170"
            android:scaleType="fitXY"
            app:corner_radius="@dimen/dp_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:type="round" />
        <ImageView
            android:id="@+id/img_topic_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:src="@mipmap/activity_collect_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_18"
            app:layout_constraintTop_toBottomOf="@+id/iv"
            tools:text="非遗名称" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            android:textColor="@color/legacy_module_minor_color"
            android:textSize="@dimen/sp_12"
            tools:text="传承项目：| 二十多发货了速度快放假阿里山附近法律手段扣几分收到反馈上来打飞机路上看到房间里水电费老师肯定积分楼上的咖啡机阿斯兰的看法加适量快递费"
            />

        <TextView
            app:layout_goneMarginTop="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_project"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"
            tools:text="个非遗故事" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>