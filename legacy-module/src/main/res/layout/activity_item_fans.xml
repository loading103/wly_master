<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data></data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_height="wrap_content">

             <androidx.constraintlayout.widget.ConstraintLayout
                 android:id="@+id/ll_content"
                 android:layout_marginHorizontal="@dimen/dp_20"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <com.daqsoft.widget.RoundImageView
                     android:id="@+id/rv_head"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintLeft_toLeftOf="parent"
                     android:layout_width="@dimen/dp_40"
                     android:layout_marginVertical="@dimen/dp_16"
                     android:layout_height="@dimen/dp_40"/>
           <com.daqsoft.provider.view.FlowLayout
               android:id="@+id/ll_name"
               android:layout_width="@dimen/dp_200"
               android:orientation="horizontal"
               android:layout_alignEnd="@+id/rv_head"
               app:layout_constraintTop_toTopOf="@+id/rv_head"
               app:layout_constraintLeft_toRightOf="@+id/rv_head"
               android:layout_marginLeft="@dimen/dp_12"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="你大爷你大爷你大爷你大爷"
                   android:singleLine="true"
                   android:ellipsize="end"
                   android:textColor="@color/color_333"
                   android:textSize="@dimen/sp_16"
                   />
               <TextView
                   android:id="@+id/tv_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="非遗代表性传承人"
                   android:layout_marginTop="@dimen/dp_6"
                   android:textSize="@dimen/sp_9"
                   android:paddingVertical="@dimen/dp_2"
                   android:paddingHorizontal="@dimen/dp_6"
                   android:layout_marginLeft="@dimen/dp_6"
                   android:textColor="@color/legacy_module_primary_color"
                   android:background="@drawable/legacy_shape_primary_solid"
                   />
           </com.daqsoft.provider.view.FlowLayout>
                 <TextView
                     android:id="@+id/tv_time"
                     app:layout_constraintTop_toBottomOf="@id/ll_name"
                     app:layout_constraintLeft_toLeftOf="@id/ll_name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     tools:text="2020-10-10"
                     android:textSize="@dimen/sp_11"
                     android:layout_marginTop="@dimen/dp_7"
                     android:textColor="@color/color_999"
                     />

                 <TextView
                     android:id="@+id/tv_foucs"
                    android:layout_alignParentRight="true"
                     android:layout_width="wrap_content"
                     android:text="关注"
                     app:layout_constraintRight_toRightOf="parent"
                     android:textColor="@color/white"
                     android:textSize="@dimen/sp_12"
                     app:layout_constraintTop_toTopOf="@+id/ll_name"
                     android:paddingVertical="@dimen/dp_9"
                     android:paddingHorizontal="@dimen/dp_15"
                     android:background="@drawable/legacy_shape_primary_3_radius"
                     android:layout_height="wrap_content"/>
             </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_title"
                android:background="@drawable/legacy_shape_minor_3_radius"
                android:layout_width="wrap_content"
                android:paddingHorizontal="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/legacy_module_minor_color"
                android:paddingVertical="@dimen/dp_10"
                tools:text="测试以上地方就是"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_72"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="wrap_content"/>
            </LinearLayout>
</layout>