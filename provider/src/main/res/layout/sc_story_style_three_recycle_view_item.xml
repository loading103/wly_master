<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/poster_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_178"
            app:layout_constraintStart_toStartOf="parent">
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/amount"
            android:text="12图"
            app:background_normal="@color/black_000000_translucent_60"
            app:corner_radius="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_margin="8dp"
            app:layout_constraintRight_toRightOf="@+id/poster_layout"
            app:layout_constraintBottom_toBottomOf="@+id/poster_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.ruffian.library.widget.RTextView>


        <TextView
            android:text="大漠黄沙，胡杨秋浓——漠北寻秋记"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@id/poster_layout"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:ellipsize="end"
            android:maxLines="3"
            android:text=" 沙漠胡杨林位于 甘 沙漠胡杨林位于 甘"
            android:textColor="@color/color_333"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            app:layout_constraintRight_toRightOf="@id/title"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:id="@+id/like"
            android:text="1.3W "
            android:textColor="@color/color_333"
            android:textSize="12sp"
            android:drawablePadding="@dimen/dp_6"
            android:drawableLeft="@mipmap/home_gs_like"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            app:layout_goneMarginLeft="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/browse"
            android:layout_marginLeft="@dimen/dp_22"
            app:layout_constraintLeft_toRightOf="@id/like"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:text="1.3W "
            android:textColor="@color/color_333"
            android:textSize="12sp"
            android:drawablePadding="@dimen/dp_6"
            android:drawableLeft="@mipmap/mode_story_icon_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:id="@+id/time"
            android:layout_marginLeft="@dimen/dp_22"
            app:layout_constraintRight_toRightOf="parent"
            android:text="2019-09-24"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            android:drawablePadding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>