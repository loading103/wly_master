<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_item_brand_city"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_268"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="#00ffffff">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_b_yellow_round_tourism2" />

            <com.daqsoft.baselib.widgets.ArcImageView
                android:id="@+id/iv_item_brand_background_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_3"
                android:scaleType="matrix"
                app:border_color="@color/white"
                app:corner_bottom_left_radius="@dimen/dp_10"
                app:corner_bottom_right_radius="@dimen/dp_10"
                app:corner_top_left_radius="@dimen/dp_10"
                app:corner_top_right_radius="@dimen/dp_10"
                app:is_circle="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_brand_introduce_city"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_18"
                android:layout_above="@+id/tv_item_brand_name_city"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/mode_brand_base"
                android:gravity="center"
                android:textColor="@color/black_2d2a26"
                android:textSize="@dimen/sp_10"
                tools:text="哈哈哈" />

            <TextView
                android:id="@+id/tv_item_brand_name_city"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/home_b_black_round_tourism"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                tools:text="哈哈哈" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_brand_other_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_item_brand_city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="#7c4815"
            android:textSize="@dimen/sp_12"
            tools:text="哈哈哈" />
    </RelativeLayout>
</layout>
