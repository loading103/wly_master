<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/provider_white_top_bottom_5_round"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14" />

        <TextView
            android:id="@+id/txt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="长按二维码识别小程序"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_11" />

        <View
            android:id="@+id/dividing_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/txt_hint"
            android:background="@color/dividing_line" />

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividing_line"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15"
            android:text="知道了"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>