<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="datas"
            type="com.daqsoft.provider.bean.ChooseListBean" />
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
    </data>
    <LinearLayout
        android:id="@+id/ll_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:textColor="@color/color_666"
                android:textSize="@dimen/dp_15"
                android:text="A."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_4"
                android:textSize="@dimen/sp_15"
                android:text="@{datas.title}"
                tool:text="1112323332"
                android:layout_marginRight="@dimen/dp_15"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bar1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="-10dp"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/progress_bar1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/dp_6"
                android:minHeight="@dimen/dp_6"
                android:thumb="@null"
                android:layout_marginTop="@dimen/dp_8"
                android:progress="1"
                android:progressDrawable="@drawable/item_choose_progress" />
            <TextView
                android:id="@+id/tv_progress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_666"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0%"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bar2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="-10dp"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/progress_bar2"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/dp_6"
                android:minHeight="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:progress="0"
                android:thumbOffset="5dp"
                android:thumb="@mipmap/service_wenjuan_result_icon_choose"
                android:progressDrawable="@drawable/item_choose_progress_mine" />
            <TextView
                android:id="@+id/tv_progress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_cb2b2b"
                android:text="0%"/>
        </LinearLayout>
    </LinearLayout>
</layout>