<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
       >

        <LinearLayout
            android:id="@+id/llv_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_venue_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                tools:text="05月08日" />

            <TextView
                android:id="@+id/tv_venue_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                tools:text="今天" />

            <TextView
                android:id="@+id/tv_venue_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_12"
                tools:text="余1520" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_is_can_book"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:background="@mipmap/venue_details_label_book"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
