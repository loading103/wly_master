<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/txt_gray</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="NewOrderDetail">
        <item name="contentGravity">left</item>
        <item name="showDivider">false</item>
        <item name="labelSize">@dimen/sp_13</item>
        <item name="rightContentSize">@dimen/sp_13</item>
        <item name="android:layout_width">0dp</item>
        <item name="leftLabelColor">@color/color_999</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="layout_constraintEnd_toEndOf">@id/cost_type_view</item>
        <item name="layout_constraintStart_toStartOf">@id/title_view2</item>
        <item name="layout_constraintTop_toBottomOf">@id/title_view2</item>
    </style>

    <style name="NewOrderDetail2" parent="NewOrderDetail">
        <item name="contentGravity">left</item>
        <item name="showDivider">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="leftLabelColor">@color/color_999</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="layout_constraintEnd_toEndOf">@id/cost_type_view</item>
        <item name="layout_constraintStart_toStartOf">@id/title_view2</item>
        <item name="layout_constraintTop_toBottomOf">@id/title_view2</item>
    </style>


    <style name="NewOrderDetailTitle" parent="ViewWrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="OrderDetailLabel">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/color_999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>