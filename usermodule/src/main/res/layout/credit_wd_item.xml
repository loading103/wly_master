<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_190"
        android:layout_height="wrap_content"
        android:background="@mipmap/mine_credit_xywd_bg"
        >
        <ImageView
            android:id="@+id/iv_credit_wd_icon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_28"
            tool:src="@mipmap/mine_credit_xywd_reservation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_25"
            />
        <TextView
            android:id="@+id/tv_credit_wd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333"
            tool:text="预约行为"
            app:layout_constraintTop_toBottomOf="@+id/iv_credit_wd_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/tv_credit_wd_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:ellipsize="end"
            android:maxLines="2"
            tool:text="预约行为是指你在活动室、活动等预订中体现的行为特点"
            app:layout_constraintTop_toBottomOf="@+id/tv_credit_wd_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/tv_credit_wd_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_36cd64"
            tool:text="预约活动室 >"
            app:layout_constraintTop_toBottomOf="@+id/tv_credit_wd_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_credit_wd_right_txt"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/tv_credit_wd_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_36cd64"
            app:layout_constraintLeft_toRightOf="@+id/tv_credit_wd_left_txt"
            app:layout_constraintRight_toRightOf="parent"
            tool:text="参与活动 >"
            app:layout_constraintTop_toBottomOf="@+id/tv_credit_wd_content"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_20"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>