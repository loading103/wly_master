<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_cttr_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="讲解信息"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_comtator_lg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="讲解语言"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cttr_info" />

            <TextView
                android:id="@+id/tv_comtator_lg_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_lg_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_comtator_lg_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_comtator_lg_label"
                tools:text="中文" />

            <TextView
                android:id="@+id/tv_comtator_exhall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="讲解展厅"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comtator_lg_label" />

            <LinearLayout
                android:id="@+id/lv_comtator_exhall_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@+id/tv_comtator_exhall_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comtator_lg_label">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_comtator_cost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="讲解费用"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lv_comtator_exhall_value" />

            <TextView
                android:id="@+id/tv_comtator_cost_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_cost_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_comtator_cost_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_comtator_cost_label"
                tools:text="120元（到馆支付）" />

            <TextView
                android:id="@+id/tv_comtator_intime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="到馆时间"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comtator_cost_label" />

            <TextView
                android:id="@+id/tv_comtator_intime_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_intime_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_comtator_intime_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_comtator_intime_label"
                tools:text="120元（到馆支付）" />

            <TextView
                android:id="@+id/tv_comtator_person_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="讲解员"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comtator_intime_value" />

            <TextView
                android:id="@+id/tv_comtator_person_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comtator_person_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_comtator_person_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_comtator_person_label"
                tools:text="张三、李四" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
