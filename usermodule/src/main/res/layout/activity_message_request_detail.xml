<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/f5">

                <TextView
                    android:id="@+id/tv_request_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text=""
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_14"
                    tools:text="审核中，目前仅自己可见" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/shape_f5_r5"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12">

                <ImageView
                    android:id="@+id/img_course"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_toRightOf="@+id/img_course"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    tools:text="这里是课程完整显示" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/shape_f5_r5"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_request_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="问题"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_request_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_label"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_14"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    tools:text="这里是课程完整显示" />

                <TextView
                    android:id="@+id/tv_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_10"
                    tools:text="2020-12-18" />

                <TextView
                    android:id="@+id/tv_request_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_request_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_request_time"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_10"
                    tools:text="昵称" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/shape_f5_r5"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_reply_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="回复"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_reply_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_reply_label"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_14"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    tools:text="这里是课程完整显示" />

                <TextView
                    android:id="@+id/tv_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_reply_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_10"
                    tools:text="2020-12-18" />

                <TextView
                    android:id="@+id/tv_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_reply_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_reply_time"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_10"
                    tools:text="昵称" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/shape_app_main_color_r20"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_48"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_48"
                android:paddingBottom="@dimen/dp_12"
                android:text="撤回"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
