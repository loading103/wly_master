<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderDetailBean"
            type="com.daqsoft.provider.bean.OrderRefundDetailBean" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_green"
                android:paddingVertical="@dimen/dp_24">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:background="@mipmap/mine_result_step_highlighted"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="01"
                    android:textColor="@color/txt_green"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@id/tv_time1"
                    app:layout_constraintRight_toRightOf="@+id/tv_time1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/txt_green"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_time2"
                    app:layout_constraintRight_toRightOf="@+id/tv_time2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="02" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/txt_green"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_time3"
                    app:layout_constraintRight_toRightOf="@id/tv_time3"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="01" />

                <TextView
                    android:id="@+id/tv_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@id/tv_time1"
                    app:layout_constraintRight_toRightOf="@+id/tv_time1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_1" />

                <TextView
                    android:id="@+id/tv_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_time2"
                    app:layout_constraintRight_toRightOf="@+id/tv_time2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_2"
                    tools:text="提交申请" />

                <TextView
                    android:id="@+id/tv_status3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_time3"
                    app:layout_constraintRight_toRightOf="@id/tv_time3"
                    app:layout_constraintTop_toBottomOf="@id/tv_3"
                    tools:text="提交申请" />

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:minWidth="@dimen/dp_100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_time2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_status1"
                    tools:text="2019-06-18 20:20" />

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:minWidth="@dimen/dp_100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toRightOf="@+id/tv_time1"
                    app:layout_constraintRight_toLeftOf="@id/tv_time3"
                    app:layout_constraintTop_toBottomOf="@id/tv_status2"
