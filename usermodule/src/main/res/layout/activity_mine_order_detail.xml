                    android:minWidth="@dimen/dp_100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toRightOf="@+id/tv_time2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_status3"
                    tools:text="2019-06-18 20:20" />

                <View
                    android:id="@+id/v_status_line1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/tv_1"
                    app:layout_constraintRight_toLeftOf="@+id/tv_2"
                    app:layout_constraintTop_toTopOf="@+id/tv_1" />

                <View
                    android:id="@+id/v_status_line2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@+id/tv_2"
                    app:layout_constraintRight_toLeftOf="@+id/tv_3"
                    app:layout_constraintTop_toTopOf="@+id/tv_2" />

                <TextView
                    android:id="@+id/tv_contentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_time2"
