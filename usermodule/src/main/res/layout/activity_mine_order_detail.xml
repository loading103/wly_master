            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableLeft="@mipmap/mine_bill_icon_shop"
                    android:drawablePadding="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:text="@{orderDetailBean.businessName}"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="玉龙雪山景区" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/divide_e8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                <com.daqsoft.baselib.widgets.ArcImageView
                    android:id="@+id/iv_img"
                    placeholder="@{@drawable/placeholder_img_fail_240_180}"
                    url="@{orderDetailBean.thumbImageUrl}"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    app:corner_radius="@dimen/dp_5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="@{orderDetailBean.productName}"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toRightOf="@+id/iv_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_img"
                    tools:text="登玉龙雪山 、品风味美食藏民土司宴登玉龙雪山 品风味农家牛肉" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:includeFontPadding="false"
                    android:text="@{orderDetailBean.standardName}"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    tools:text="成人票/人脸识别入园" />

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/divide_e8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_img" />

                <TextView
                    android:id="@+id/tv_refund_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:text="退款数量"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_line2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:text="@{orderDetailBean.productNum.toString()}"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_refund_num"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="1" />

                <TextView
                    android:id="@+id/tv_refund_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:text="退款金额"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_refund_num" />

                <TextView
                    android:id="@+id/tv_apply_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_refund_amount"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="1" />

                <TextView
                    android:id="@+id/tv_handling_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:text="手续费"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_refund_amount" />

                <TextView
                    android:id="@+id/tv_service_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_handling_fee"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="1" />

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:text="实付款"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_handling_fee" />

                <TextView
                    android:id="@+id/tv_actual_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:textColor="@color/ff9e05"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="@id/tv_payment"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/color_f5f5f5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_payment" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:text="订单编号"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_order_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp_20"
                    android:includeFontPadding="false"
                    android:text="@{orderDetailBean.orderSn}"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_order_num"
                    app:layout_constraintLeft_toRightOf="@+id/tv_order_num"
                    tools:text="2050 2489 6014 5870" />

                <TextView
                    android:id="@+id/tv_refund_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/sp_12"
                    android:includeFontPadding="false"
                    android:text="退款单编号"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_num" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@{orderDetailBean.orderSn}"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_refund_num2"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_order_num2"
                    tools:text="2050 2489 6014 5870" />

                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
