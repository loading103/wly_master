<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">


        <LinearLayout
            android:id="@+id/mDialogLl"
            android:layout_width="@dimen/dp_240"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_intergral_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_m_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:src="@mipmap/mine_member_portal_pop_reward" />

            <TextView
                android:id="@+id/mTaskNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_16"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                tools:text="写下你的故事" />

            <TextView
                android:id="@+id/mTaskDesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_16"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_14"
                tools:text="发布一篇时光故事或旅行攻略" />

            <TextView
                android:id="@+id/mIntegralTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="#ffa838"
                android:textSize="@dimen/sp_18"
                tools:text="+120分" />

            <TextView
                android:id="@+id/mSeeIntegralTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_look_intergral"
                android:gravity="center"
                android:minHeight="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_25"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/integralmodule_see_integral"
                android:textColor="#ffe3af"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <ImageView
            android:id="@+id/mCancelIv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/button_close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mDialogLl" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>