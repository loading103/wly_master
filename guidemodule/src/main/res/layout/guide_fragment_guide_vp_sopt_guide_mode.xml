<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.daqsoft.guidemodule.bean.GuideLineBean.Detail" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">


        <ImageView
            android:id="@+id/iv_arrow_left"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@drawable/guide_map_button_arrow_left"
            app:layout_constraintBottom_toBottomOf="@id/fl_iv_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.flyco.roundview.RoundFrameLayout
            android:id="@+id/fl_iv_info"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_margin="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/iv_arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:rv_cornerRadius="@dimen/dp_8">

            <com.daqsoft.widget.RoundImageView
                android:id="@+id/iv"
                placeholder="@{@drawable/placeholder_img_fail_240_180}"
                url="@{item.images}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:corner_radius="@dimen/dp_8"
                app:type="round"
                tools:src="@drawable/placeholder_img_fail_240_180" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_des_on_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9"
                app:rv_backgroundColor="#85000000"
                app:rv_cornerRadius_BR="@dimen/dp_8"
                app:rv_cornerRadius_TL="@dimen/dp_8"
                tools:text="1.2km" />

        </com.flyco.roundview.RoundFrameLayout>


        <TextView
            android:id="@+id/tv_spot_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="@dimen/dp_2"
            android:singleLine="true"
            android:text="@{item.name}"
            android:textColor="@color/guide_color_333333"
            android:textSize="@dimen/sp_17"
            app:layout_constraintLeft_toRightOf="@+id/fl_iv_info"
            app:layout_constraintRight_toLeftOf="@+id/tv_indicator"
            app:layout_constraintTop_toTopOf="@+id/fl_iv_info"
            tools:text="天山大峡谷" />


        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_spot_name"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right"
            tools:text="1/10" />


        <TextView
            android:id="@+id/tv_spot_summary"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.summary}"
            android:textColor="@color/guide_color_666"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="@+id/tv_spot_name"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right"
            app:layout_constraintTop_toBottomOf="@+id/tv_spot_name"
            tools:text="新疆维吾尔自治区博物馆位于乌鲁木齐
市西北路132号，是省级综合性地志博..." />

        <TextView
            android:id="@+id/tv_spot_info_desc"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/guide_color_999"
            android:textSize="@dimen/sp_11"
            app:layout_constraintLeft_toLeftOf="@+id/tv_spot_name"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right"
            app:layout_constraintTop_toBottomOf="@+id/tv_spot_summary"
            tools:text="新疆维吾尔自治区博物馆位于乌鲁木齐
市西北路132号，是省级综合性地志博..." />

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/guide_color_e8e8e8"
            app:layout_constraintTop_toBottomOf="@+id/fl_iv_info" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/v">


            <View
                android:id="@+id/v_speak"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/ll_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_8"
                app:rv_backgroundColor="@color/guide_red_ff6b53"
                app:rv_isRadiusHalfHeight="true">


                <ImageView
                    android:id="@+id/iv_speak"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:src="@drawable/guide_map_button_voice_play" />

                <TextView
                    android:id="@+id/tv_speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/guide_spot_speak"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </com.flyco.roundview.RoundLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/ll_view_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_8"
                app:rv_backgroundColor="@color/guide_yellow_ff9e05"
                app:rv_isRadiusHalfHeight="true">


                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:src="@drawable/guide_map_button_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/guide_detail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </com.flyco.roundview.RoundLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/ll_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_8"
                app:rv_backgroundColor="@color/guide_yellow_ff9e05"
                app:rv_isRadiusHalfHeight="true">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:src="@drawable/guide_map_button_navigate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/guide_route"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </com.flyco.roundview.RoundLinearLayout>

            <View
                android:id="@+id/v_next_stop"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />


            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/ll_next_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_8"
                app:rv_backgroundColor="@color/guide_yellow_ff9e05"
                app:rv_isRadiusHalfHeight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_next_stop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </com.flyco.roundview.RoundLinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/guide_map_button_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/fl_iv_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>