<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="url"
            type="String" />

        <variable
            name="name"
            type="String" />

        <variable
            name="info"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_32"
        android:orientation="vertical">

        <com.daqsoft.baselib.widgets.ArcImageView
            placeholder="@mipmap/common_image_screen_no_data"
            url="@{url}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_108"
            android:src="@mipmap/common_image_screen_no_data"
            app:corner_bottom_left_radius="@dimen/dp_3"
            app:corner_bottom_right_radius="@dimen/dp_3"
            app:corner_top_left_radius="@dimen/dp_3"
            app:corner_top_right_radius="@dimen/dp_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@{name}"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="成都" />

        <TextView
            android:id="@+id/tv_line_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/main_b_36cd64_stroke_1_round_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:text="@{info}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_10"
            tools:text="亲子游" />
    </LinearLayout>
</layout>
