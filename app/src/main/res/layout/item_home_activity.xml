<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="url"
            type="String" />

        <variable
            name="logo"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content">

            <com.daqsoft.baselib.widgets.ArcImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_263"
                android:scaleType="centerCrop"
                app:border_color="@color/white"
                app:corner_bottom_left_radius="@dimen/dp_5"
                app:corner_bottom_right_radius="@dimen/dp_5"
                app:corner_top_left_radius="@dimen/dp_5"
                app:corner_top_right_radius="@dimen/dp_5"
                app:is_circle="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                    android:id="@+id/tv_activity_name"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22"
                    tools:text="好啊，疫后四川氧你" />

                <LinearLayout
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_activity_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        tools:text="05.15-06.10" />

                    <View
                        android:id="@+id/tv_activity_line"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_activity_enjoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        tools:text="6332人参加" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_activity_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_square_circle_bg_white_stroke"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        tools:text="进行中" />

                    <TextView
                        android:id="@+id/tv_activity_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:background="@drawable/gray_square_circle_bg_white_stroke"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        tools:text="进行中" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


</layout>