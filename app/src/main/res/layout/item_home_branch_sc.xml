<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="url"
            type="String" />

        <variable
            name="logo"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_335"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_height="@dimen/dp_268">

            <com.daqsoft.baselib.widgets.ArcImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"
                app:border_color="@color/white"
                app:corner_bottom_left_radius="@dimen/dp_10"
                app:corner_bottom_right_radius="@dimen/dp_10"
                app:corner_top_left_radius="@dimen/dp_10"
                app:corner_top_right_radius="@dimen/dp_10"
                app:is_circle="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22"
                    tools:text="好啊，疫后四川氧你" />

                <TextView
                    android:id="@+id/tv_brand_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    tools:text="05.15-06.10" />

             <LinearLayout
                 android:id="@+id/ll_relation"
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_marginTop="@dimen/dp_14"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/tv_relation"
                     android:layout_width="wrap_content"
                     android:layout_height="@dimen/dp_15"
                     android:textColor="@color/white"
                     android:textSize="@dimen/sp_10"
                     android:background="@drawable/shape_ffff_20_5"
                     tools:text="测试的"
                     />
                 <TextView
                     android:id="@+id/tv_relation1"
                     android:layout_width="wrap_content"
                     android:layout_height="@dimen/dp_15"
                     android:textColor="@color/white"
                     android:textSize="@dimen/sp_10"
                     android:background="@drawable/shape_ffff_20_5"
                     tools:text="测试的"
                     android:layout_marginLeft="@dimen/dp_4"
                     />
             </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


</layout>