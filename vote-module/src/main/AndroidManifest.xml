<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dqsoft.votemodule">

    <application>
        <!--投票列表-->
        <activity
            android:name=".activity.VoteLsActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <!--投票详情-->
        <activity
            android:name=".activity.VoteDetailActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <!--投票搜索-->
        <activity
            android:name=".activity.VoteSearchActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <!--我要参与-->
        <activity
            android:name=".activity.VoteInPartActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <!--我的投票-->
        <activity
            android:name=".activity.MineVoteLsActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <!--我的参与-->
        <activity
            android:name=".activity.MineVoteWorkDetailActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            tools:ignore="LockedOrientationActivity" />
        <!--我的参与-作品列表-->
        <activity
            android:name=".activity.VoteInPartListActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
    </application>
</manifest>