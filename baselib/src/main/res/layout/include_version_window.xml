<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:text="新版本更新"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="left"
        android:textColor="@color/txt_gray_black"
        android:textSize="@dimen/sp_13"
        tools:text="有新版本v2.1.4，建议更新" />

    <TextView
        android:id="@+id/version_content_ifo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="left"
        android:text="更新内容："
        android:textColor="@color/txt_gray_black"
        android:textSize="@dimen/sp_13"
        tools:text="更新日志：" />

    <TextView
        android:id="@+id/version_content_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/txt_gray_black"
        android:textSize="@dimen/sp_13"
        tools:text="1.杀杀杀杀杀杀杀杀杀" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/dividing_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="不用了"
            android:textColor="@color/txt_gray_black"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/v_version_line"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/dividing_line" />

        <TextView
            android:id="@+id/version_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="更新"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</LinearLayout>
